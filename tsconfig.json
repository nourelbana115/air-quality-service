{
    "compilerOptions": {
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "skipLibCheck": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*", "config"],
    "lib": ["es2016"],
    "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
  }